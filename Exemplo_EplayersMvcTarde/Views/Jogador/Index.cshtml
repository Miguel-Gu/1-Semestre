@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="banner_cadastro">
    <h1>Cadastro de Jogador</h1>
</div>

<section class="conteudo_principal_tela_cadastro_jogador">
    <div class="div_cadastro_jogador">
        <form method="POST" action='@Url.Action("Cadastrar")'>

            <div class="campo">
                <label>ID Jogador</label>
                <input type="text" name="IdJogador" required>
            </div>

            <div class="campo">
                <label>ID Equipe</label>
                <input type="text" name="IdEquipe" required>
            </div>

            <div class="campo">
                <label>Nome</label>
                <input type="text" name="Nome" required>
            </div>

            <div class="campo">
                <label>Email</label>
                <input type="email" name="Email" required>
            </div>

            <div class="campo">
                <label>Senha</label>
                <input type="password" name="Senha" required>
            </div>

            <div class="div_botÃ£o_jogador">
                <button type="submit">Cadastrar</button>
            </div>

        </form>
    </div>

    <table class="table table-striped table-responsive">
        <thead>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Excluir</th>
        </thead>
        <tbody>
            @foreach (Jogador j in ViewBag.Jogadores)
            {
                <tr>
                    <td>@j.IdJogador</td>
                    <td>@j.Nome</td>
                    <td>@j.Email</td>
                    <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                        asp-route-id="@j.IdJogador">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>